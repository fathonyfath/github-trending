<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/no_internet_connection_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/no_internet_connection_description"
        android:src="@drawable/illust_no_internet_connection"
        app:layout_constraintBottom_toTopOf="@+id/no_internet_connection_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/no_internet_connection_title"
        style="@style/AppTheme.TextAppearance.NoInternetConnectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/noInternetConnection_imageToTitleMargin"
        android:text="@string/no_internet_connection_title"
        app:layout_constraintBottom_toTopOf="@+id/no_internet_connection_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no_internet_connection_image" />

    <TextView
        android:id="@+id/no_internet_connection_subtitle"
        style="@style/AppTheme.TextAppearance.NoInternetConnectionSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/noInternetConnection_titleToSubtitleMargin"
        android:text="@string/no_internet_connection_subtitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no_internet_connection_title" />

    <Button
        android:id="@+id/retry_button"
        style="@style/AppTheme.Button"
        android:layout_width="0dp"
        android:layout_height="@dimen/noInternetConnectionRetry_height"
        android:layout_marginStart="@dimen/noInternetConnectionRetry_margin"
        android:layout_marginEnd="@dimen/noInternetConnectionRetry_margin"
        android:layout_marginBottom="@dimen/noInternetConnectionRetry_margin"
        android:text="@string/no_internet_connection_retry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>